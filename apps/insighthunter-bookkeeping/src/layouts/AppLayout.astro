---
// src/layouts/AppLayout.astro

import NavBar from '../components/NavBar';
import AstroLayout from '../layouts/AstroLayout'; // if you actually use this
import '../styles/bookkeeping.css';

interface Props {
  title: string;
}

// Option 1: typed destructuring
const { title } = Astro.props as Props;

// Option 2 (Astro style):
// const { title }: Props = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} - InsightHunter Bookkeeping</title>
    <link rel="manifest" href="/manifest.webmanifest" />
  </head>
  <body>
    <NavBar client:load />
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  main {
    min-height: calc(100vh - 70px);
    margin-top: 70px;
  }
</style>
