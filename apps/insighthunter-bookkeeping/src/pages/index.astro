// src/pages/index.astro
import AppLayout from '../layouts/AppLayout.astro';
---

<AppLayout title="InsightHunter Bookkeeping">
  <div class="hero">
    <h1>Professional Bookkeeping Made Simple</h1>
    <p>Complete double-entry accounting system for small businesses</p>
    <a href="/dashboard" class="btn-primary">Get Started</a>
  </div>

  <div class="features">
    <div class="feature-card">
      <h3>ðŸ“Š Full General Ledger</h3>
      <p>Complete double-entry accounting with automatic balance verification</p>
    </div>
    <div class="feature-card">
      <h3>ðŸ’° Financial Reports</h3>
      <p>Balance sheets, P&L statements, and cash flow reports</p>
    </div>
    <div class="feature-card">
      <h3>ðŸ”„ Bank Reconciliation</h3>
