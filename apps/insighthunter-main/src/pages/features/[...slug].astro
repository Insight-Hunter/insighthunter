---
import MarketingLayout from '../../layouts/MarketingLayout.astro';
import { getApp } from '../../data/apps.ts';

const { slug } = Astro.params;
const app = getApp(slug);

if (!app) {
  Astro.response.status = 404;
  Astro.response.statusText = 'Not Found';
  return;
}
---
<MarketingLayout title={app.name} description={app.desc}>
    <section class="hero">
        <h1>{app.name}</h1>
        <p>{app.desc}</p>
    </section>

    <div class="feature-content container">
        <section class="feature-details">
            <h2>Features</h2>
            <ul>
                {app.features.map(feature => <li>{feature}</li>)}
            </ul>
        </section>

        <section class="cta">
            <a href="/shop/checkout" class="btn-primary">Purchase</a>
        </section>
    </div>
</MarketingLayout>
