---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Contact">
    <main class="main">
      <h1>Contact Us</h1>

      <section class="card">
        <form class="contact-form">
          <label>Name</label>
          <input type="text" />

          <label>Email</label>
          <input type="email" />

          <label>Message</label>
          <textarea rows="5"></textarea>

          <button class="btn-primary" type="submit">Send</button>
        </form>
      </section>
    </main>
</Layout>
