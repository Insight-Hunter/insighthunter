  beta: { label: "Beta", cls: "s-beta" },
  "coming-soon": { label: "Coming Soon", cls: "s-soon" },
};

const TIER_MAP = {
  lite: { label: "Lite", cls: "tier-lite" },
  standard: { label: "Standard", cls: "tier-standard" },
  pro: { label: "Pro / Enterprise", cls: "tier-pro" },
