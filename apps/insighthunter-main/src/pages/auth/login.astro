---
import AuthLayout from '../../layouts/AuthLayout.astro';
---
<AuthLayout title="Login">
  <section class="card form-container">
    <h1>Login to your account</h1>
    <form id="login-form" class="form" novalidate>
      <label for="email">Email</label>
      <input type="email" id="email" name="email" autocomplete="email" required />
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        autocomplete="current-password"
        required
      />
      <p id="error-message" role="alert" aria-live="polite" style="color: red; min-height: 1.25rem;"></p>
      <button type="submit" id="submit-btn" class="btn-primary">Login</button>
    </form>
    <p>Don't have an account? <a href="/auth/signup">Sign up</a></p>
    <p><a href="/auth/forgot-password">Forgot your password?</a></p>
  </section>
  <script src="../../scripts/login.ts"></script>
</AuthLayout>
