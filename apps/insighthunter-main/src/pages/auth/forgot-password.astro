---
import AuthLayout from '../../layouts/AuthLayout.astro';
---
<AuthLayout title="Forgot Password">
  <section class="card form-container">
    <h1>Forgot your password?</h1>
    <p>Enter your email address and we'll send you a link to reset your password.</p>
    <form id="forgot-password-form" class="form" novalidate>
      <label for="email">Email</label>
      <input type="email" id="email" name="email" autocomplete="email" required />
      <p id="error-message" role="alert" aria-live="polite" style="color: red; min-height: 1.25rem;"></p>
      <button type="submit" id="submit-btn" class="btn-primary">Send Reset Link</button>
    </form>
    <p><a href="/auth/login">Back to login</a></p>
  </section>
  <script src="../../scripts/forgot-password.ts"></script>
</AuthLayout>
